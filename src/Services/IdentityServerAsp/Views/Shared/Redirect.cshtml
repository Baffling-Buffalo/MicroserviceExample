@{Layout = ""; }
@model RedirectViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AlgoIdentity | Logged out</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminLTE/fontawesome-free-5.9.0-web/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/adminLTE/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminLTE/dist/css/adminlte.min.css">

    <!-- Google Font: Source Sans Pro -->
    <link href="~/fonts/Source_Sans_Pro/stylesheet.css" rel="stylesheet">
</head>



<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Algo</b>IDENTITY</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">@Localizer["Redirect"]</p>
                <p>@ViewBag.Message</p>
                <br />
                <p>
                    @Localizer["You are now being returned to the application."]
                </p>
                @*<p>
                    @Localizer["Once complete, you may close this tab"]
                </p>*@

                <meta http-equiv="refresh" content="0;url=@Model.RedirectUrl" data-url="@Model.RedirectUrl">
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <script src="~/js/signin-redirect.js"></script>
    <!-- jQuery -->
    <script src="~/adminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
